generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User & Authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?
  level         Int       @default(1)
  xp            Int       @default(0)
  rank          String    @default("Bronze")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts                  Account[]
  sessions                  Session[]
  attempts                  Attempt[]
  entries                   Entry[]
  favorites                 Favorite[]
  likes                     Like[]
  comments                  Comment[]
  notifications             Notification[]
  dailyChallengeAttempts    DailyChallengeAttempt[]
  userBadges                UserBadge[]
  hostedRooms               CollaborationRoom[]         @relation("HostedRooms")
  collaborationParticipants CollaborationParticipant[]
  collaborationMessages     CollaborationMessage[]
  battleParticipants        BattleParticipant[]
  battleAttempts            BattleAttempt[]

  @@index([email])
  @@index([xp])
  @@index([level])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Terms
model Term {
  id            String   @id @default(cuid())
  word          String   @unique
  category      String
  subcategory   String?
  officialDef   String   @db.Text
  ngWords       String[]
  tags          String[]
  totalAttempts Int      @default(0)
  totalSuccess  Int      @default(0)
  viewCount     Int      @default(0)
  favoriteCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  attempts           Attempt[]
  entries            Entry[]
  favorites          Favorite[]
  dailyChallenges    DailyChallenge[]
  collaborationRooms CollaborationRoom[]
  battleRooms        BattleRoom[]

  @@index([category])
  @@index([totalAttempts])
}

// Attempts
model Attempt {
  id          String   @id @default(cuid())
  userId      String
  termId      String
  difficulty  String
  aiModel     String
  explanation String   @db.Text
  success     Boolean
  confidence  Float
  aiResponse  String   @db.Text
  aiComment   String?  @db.Text
  xpEarned    Int      @default(0)
  createdAt   DateTime @default(now())

  user                   User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  term                   Term                   @relation(fields: [termId], references: [id], onDelete: Cascade)
  dailyChallengeAttempts DailyChallengeAttempt?

  @@index([userId])
  @@index([termId])
  @@index([createdAt])
}

// Entries (Posted explanations)
model Entry {
  id             String    @id @default(cuid())
  userId         String
  termId         String
  explanation    String    @db.Text
  difficulty     String
  confidence     Float
  isCrown        Boolean   @default(false)
  crownStartDate DateTime?
  crownDays      Int       @default(0)
  easyScore      Float?
  normalScore    Float?
  hardScore      Float?
  version        Int       @default(1)
  likeCount      Int       @default(0)
  commentCount   Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  term     Term      @relation(fields: [termId], references: [id], onDelete: Cascade)
  likes    Like[]
  comments Comment[]

  @@index([userId])
  @@index([termId])
  @@index([isCrown])
}

// Favorites
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  termId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  term Term @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([userId, termId])
}

// Social Features
model Like {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@unique([userId, entryId])
  @@index([entryId])
  @@index([userId])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  entryId   String
  content   String   @db.Text
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  entry Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@index([entryId])
  @@index([userId])
  @@index([createdAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  message   String   @db.Text
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

// Daily Challenge
model DailyChallenge {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date
  termId    String
  createdAt DateTime @default(now())

  term                   Term                    @relation(fields: [termId], references: [id], onDelete: Cascade)
  dailyChallengeAttempts DailyChallengeAttempt[]

  @@index([date])
}

model DailyChallengeAttempt {
  id               String   @id @default(cuid())
  userId           String
  dailyChallengeId String
  attemptId        String   @unique
  completedAt      DateTime @default(now())

  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyChallenge DailyChallenge @relation(fields: [dailyChallengeId], references: [id], onDelete: Cascade)
  attempt        Attempt        @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  @@unique([userId, dailyChallengeId])
  @@index([dailyChallengeId])
  @@index([userId])
  @@index([completedAt])
}

// Badges and Achievements
model Badge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String   @db.Text
  icon        String
  category    String
  requirement String   @db.Text
  rarity      String   @default("common")
  createdAt   DateTime @default(now())

  userBadges UserBadge[]

  @@index([category])
  @@index([rarity])
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())
  progress  Int      @default(0)

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@index([earnedAt])
}

// Collaboration Mode
model CollaborationRoom {
  id          String   @id @default(cuid())
  code        String   @unique
  termId      String
  hostId      String
  maxPlayers  Int      @default(4)
  status      String   @default("waiting") // waiting, in_progress, completed
  difficulty  String   @default("normal")
  createdAt   DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  host         User                      @relation("HostedRooms", fields: [hostId], references: [id], onDelete: Cascade)
  term         Term                      @relation(fields: [termId], references: [id], onDelete: Cascade)
  participants CollaborationParticipant[]
  messages     CollaborationMessage[]

  @@index([code])
  @@index([hostId])
  @@index([termId])
  @@index([status])
  @@index([createdAt])
}

model CollaborationParticipant {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  role      String   @default("participant") // host, participant
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  isActive  Boolean  @default(true)

  room CollaborationRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
  @@index([isActive])
}

model CollaborationMessage {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  content   String   @db.Text
  type      String   @default("text") // text, hint, system
  createdAt DateTime @default(now())

  room CollaborationRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([userId])
  @@index([createdAt])
}

// Battle Mode
model BattleRoom {
  id          String   @id @default(cuid())
  code        String   @unique
  termId      String
  maxPlayers  Int      @default(2)
  status      String   @default("waiting") // waiting, in_progress, completed
  difficulty  String   @default("normal")
  timeLimit   Int      @default(300) // 秒単位（デフォルト5分）
  createdAt   DateTime @default(now())
  startedAt   DateTime?
  completedAt DateTime?

  term         Term                @relation(fields: [termId], references: [id], onDelete: Cascade)
  participants BattleParticipant[]
  attempts     BattleAttempt[]

  @@index([code])
  @@index([termId])
  @@index([status])
  @@index([createdAt])
}

model BattleParticipant {
  id        String   @id @default(cuid())
  roomId    String
  userId    String
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  isActive  Boolean  @default(true)
  isReady   Boolean  @default(false)

  room BattleRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
  @@index([isActive])
}

model BattleAttempt {
  id          String   @id @default(cuid())
  roomId      String
  userId      String
  explanation String   @db.Text
  success     Boolean
  confidence  Float
  aiResponse  String   @db.Text
  aiComment   String?  @db.Text
  xpEarned    Int      @default(0)
  submitTime  Int // 提出までの秒数
  createdAt   DateTime @default(now())

  room BattleRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([userId])
  @@index([createdAt])
}
